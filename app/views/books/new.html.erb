<% provide(:title, 'Add a book') %>
<h1>Add a book</h1>

<div class="row">
  <div class="span6 offset3">

<%= form_for @book, :html => {:multipart => true} do |f| %>
  

  <%= render 'shared/books_error_messages'%>
	
  <div><%= f.label :title %><br />
  <%= f.text_field :title %></div>

  <div><%= f.label :ISBN_No %><br />
  <%= f.number_field :isbn %></div>

  <div><%= f.label :author %><br />
  <%= f.text_field :author %></div>

  <div><%= f.label :amazon_link %><br />
  <%= f.text_field :amazon_link %></div>

  
  <div><%= f.submit "Add", class: "btn btn-small btn-primary" %></div>
<% end %>


 </div>
</div>