<% provide(:title, @user.name) %>
<aside>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for_user @user %>
        <%= @user.name %>
        <% if current_user.admin? && !current_user?(@user) %>
        | <%= link_to "delete", @user, method: :delete,
                                  data: { confirm: "You sure?" } %>
                                  <% end %>
        <h5>
        <%= pluralize(@user.reviews.count, "review") %>
        </h5>
      </h1>  
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>

  <div class="btn-group">
    <button type="button" class="btn"><%= link_to "Books", books_path %></button>
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
    <li><%= link_to "Add a new Book", new_book_path %></li>
    <li><%= link_to "Add a Book to your read collection", new_book_path %></li>
    <li><a href="#">Something else here</a></li>
    <li class="divider"></li>
    <li><a href="#">Separated link</a></li>
    </ul>
  </div>
  </aside>
  <section>
  <div class="span8">
    <%= render 'shared/follow_form' if signed_in? %>
    <% if @user.reviews.any? %>
      <h3>Reviews (<%= @user.reviews.count %>)</h3>
      <ol class="reviews">
        <%= render @reviews %>
      </ol>
      <%= will_paginate @reviews %>
    <% end %>
  </div>
</section>
</div>

